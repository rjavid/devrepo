@{
    ViewBag.Title = "ChangePassword";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>ChangePassword</h2>

@using (Html.BeginForm())
{
    <style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
</style>

    //txtCurrentPassword
    <table border="1">
    <tr>
    <td>Current Password </td>
    <td><input type="password" id="txtCurrentPassword"  name="txtCurrentPassword"  /></td>
    </tr>

    <tr>
    <td>New Password </td>
    <td><input type="password" id="txtNewPassword" name="txtNewPassword"  /></td>
    </tr>

    <tr>
    <td>ReType Password </td>
    <td><input type="password" id="txtReTypePassword" name="txtReTypePassword" /></td>
    </tr>
     <tr>
    <td></td>
   <td><input type="submit" id="btnChangePassword"  value="Change Password" /> </td>
    </tr>
    </table>
    
    <div id="error">@ViewBag.ChangeMessage</div>

}
