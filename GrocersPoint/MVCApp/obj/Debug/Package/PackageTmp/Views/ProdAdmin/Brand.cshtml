@model IEnumerable<BLL.Brand>

@{
    ViewBag.Title = "Brand";
    Layout = "~/Views/Shared/_ProductAdminLayout.cshtml";
}

<table width="100%">
<tr>
<td style="text-align:center"> <b>Brand</b></td>

</tr>
</table>
     
<p style="text-align:right">
    @Html.ActionLink("Create New", "CreateBrand")
</p>
<table border ="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Brand_Id)
          
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand_Name)
        </th>
        <th> Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Brand_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditBrand", new {  id=item.Brand_Id }) |
            @Html.ActionLink("Delete", "DeleteBrand", new { id = item.Brand_Id })
        </td>
    </tr>
}

</table>
