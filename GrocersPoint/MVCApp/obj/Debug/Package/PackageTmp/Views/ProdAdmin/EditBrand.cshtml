@model BLL.Brand

@{
    ViewBag.Title = "EditBrand";
    Layout = "~/Views/Shared/_ProductAdminLayout.cshtml";
}

<h2>EditBrand</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Brand</legend>
        @Html.HiddenFor(model => model.Brand_Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Brand_Name,"Brand Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Brand_Name)
            @Html.ValidationMessageFor(model => model.Brand_Name)
        </div>
        <br />
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>

    @Html.ActionLink("Back to List", "Brand")
</div>
